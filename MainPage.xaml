<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bit_RPG.MainPage">

    <!-- Add safe area handling -->
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="0,20,0,0" />
            <On Platform="Android" Value="0" />
        </OnPlatform>
    </ContentPage.Padding>

    <Grid RowDefinitions="*,Auto,*" Padding="20">
        
        <!-- Title Section -->
        <VerticalStackLayout Grid.Row="1" 
                            Spacing="40"
                            VerticalOptions="Center">
            
            <!-- Game Title -->
            <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                <Label Text="⚔️"
                       FontSize="48"
                       HorizontalOptions="Center"/>
                <Label Text="Bit RPG"
                       FontSize="32"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
                <Label Text="Your Adventure Awaits"
                       FontSize="14"
                       TextColor="Gray"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
            
            <!-- Buttons -->
            <VerticalStackLayout Spacing="16" HorizontalOptions="Center">
                <Button x:Name="StartGameBtn"
                        Text="⚔️ New Game"
                        SemanticProperties.Hint="Start a new game"
                        Clicked="OnStartGameClicked"
                        HorizontalOptions="Fill"
                        HeightRequest="56"
                        FontSize="18"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White">
                    <Button.WidthRequest>
                        <OnPlatform x:TypeArguments="x:Double">
                            <On Platform="Android" Value="280" />
                            <On Platform="iOS" Value="280" />
                            <On Platform="WinUI" Value="250" />
                        </OnPlatform>
                    </Button.WidthRequest>
                </Button>
                
                <Button x:Name="LoadGameBtn"
                        Text="📂 Load Game"
                        SemanticProperties.Hint="Load a saved game"
                        Clicked="OnLoadGameClicked"
                        HorizontalOptions="Fill"
                        HeightRequest="56"
                        FontSize="18"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        BackgroundColor="{AppThemeBinding Light=#4A5568, Dark=#718096}"
                        TextColor="White">
                    <Button.WidthRequest>
                        <OnPlatform x:TypeArguments="x:Double">
                            <On Platform="Android" Value="280" />
                            <On Platform="iOS" Value="280" />
                            <On Platform="WinUI" Value="250" />
                        </OnPlatform>
                    </Button.WidthRequest>
                </Button>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </Grid>

</ContentPage>
