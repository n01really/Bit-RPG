<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bit_RPG.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="20"
            VerticalOptions="Center">
            
            <Label
                Text="Bit RPG"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,20,0,30" />
            
            <Button
                x:Name="StartGameBtn"
                Text="New Game"
                SemanticProperties.Hint="Start a new game"
                Clicked="OnStartGameClicked"
                HorizontalOptions="Center"
                Padding="40,12"
                FontSize="16"
                WidthRequest="200" />
            
            <Button
                x:Name="LoadGameBtn"
                Text="Load Game"
                SemanticProperties.Hint="Load a saved game"
                Clicked="OnLoadGameClicked"
                HorizontalOptions="Center"
                Padding="40,12"
                FontSize="16"
                WidthRequest="200" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
