<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Bit_RPG.GuildHallPopup"
               Size="600,700">
    <Border Stroke="Gray"
            StrokeThickness="2"
            Background="{AppThemeBinding Light=White, Dark=#1E1E1E}"
            Padding="0"
            Margin="10">
        <Border.WidthRequest>
            <OnPlatform x:TypeArguments="x:Double">
                <On Platform="Android" Value="360" />
                <On Platform="iOS" Value="360" />
                <On Platform="WinUI" Value="450" />
            </OnPlatform>
        </Border.WidthRequest>
        <Border.HeightRequest>
            <OnPlatform x:TypeArguments="x:Double">
                <On Platform="Android" Value="620" />
                <On Platform="iOS" Value="620" />
                <On Platform="WinUI" Value="680" />
            </OnPlatform>
        </Border.HeightRequest>
        
        <Grid RowDefinitions="Auto,*,Auto" RowSpacing="0">
            
            <!-- Header -->
            <Grid Grid.Row="0" 
                  Padding="20,16"
                  BackgroundColor="{StaticResource Primary}">
                <Label x:Name="TitleLabel"
                       TextColor="White"
                       FontSize="22"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Grid>

            <!-- Content -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout Spacing="0" Padding="16">

                    <!-- Guild Master Section -->
                    <Label Text="ðŸŽ­ Guild Master"
                           FontSize="16"
                           FontAttributes="Bold"
                           Margin="0,0,0,12"/>
                    
                    <Border x:Name="GuildMasterSection" 
                            Stroke="{StaticResource Primary}"
                            StrokeThickness="2"
                            Padding="16"
                            Margin="0,0,0,16"
                            BackgroundColor="{AppThemeBinding Light=#F0F8FF, Dark=#1A2A3A}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label x:Name="GuildMasterName" 
                                   FontSize="15" 
                                   FontAttributes="Bold"/>
                            <Label x:Name="GuildMasterInfo" 
                                   FontSize="13" 
                                   TextColor="Gray"
                                   LineBreakMode="WordWrap"/>
                            <Button Text="Talk to Guild Master"
                                    Clicked="OnTalkToGuildMasterClicked"
                                    HeightRequest="44"
                                    FontSize="14"
                                    CornerRadius="8"
                                    Margin="0,8,0,0"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Quest Board Section -->
                    <Label Text="ðŸ“‹ Quest Board"
                           FontSize="16"
                           FontAttributes="Bold"
                           Margin="0,0,0,12"/>
                    
                    <Border Stroke="LightGray"
                            StrokeThickness="1"
                            Padding="16"
                            Margin="0,0,0,16"
                            BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Accept new quests from the guild master or complete your active quests."
                                   FontSize="13"
                                   TextColor="Gray"
                                   LineBreakMode="WordWrap"/>
                            <Button Text="ðŸ“œ View Available Quests"
                                    Clicked="OnViewQuestsClicked"
                                    HeightRequest="44"
                                    FontSize="14"
                                    CornerRadius="8"
                                    BackgroundColor="{AppThemeBinding Light=Green, Dark=DarkGreen}"
                                    TextColor="White"
                                    Margin="0,8,0,0"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Guild Members Section -->
                    <Label Text="ðŸ‘¥ Guild Members"
                           FontSize="16"
                           FontAttributes="Bold"
                           Margin="0,0,0,12"/>
                    
                    <VerticalStackLayout x:Name="GuildMembersContainer" Spacing="8" Margin="0,0,0,16"/>

                    <!-- Training Section -->
                    <Label Text="ðŸ“š Training"
                           FontSize="16"
                           FontAttributes="Bold"
                           Margin="0,0,0,12"/>
                    
                    <Border Stroke="LightGray"
                            StrokeThickness="1"
                            Padding="16"
                            BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Train your skills to improve your abilities and advance your rank."
                                   FontSize="13"
                                   TextColor="Gray"
                                   LineBreakMode="WordWrap"/>
                            <Button Text="View Training Options"
                                    Clicked="OnTrainingClicked"
                                    HeightRequest="44"
                                    FontSize="14"
                                    CornerRadius="8"
                                    Margin="0,8,0,0"/>
                        </VerticalStackLayout>
                    </Border>
                    
                </VerticalStackLayout>
            </ScrollView>
            
            <!-- Footer Button -->
            <Border Grid.Row="2"
                    BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2C2C2C}"
                    Padding="16">
                <Button Text="Close"
                        Clicked="OnCloseClicked"
                        HorizontalOptions="Fill"
                        HeightRequest="48"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="8"/>
            </Border>
        </Grid>
    </Border>
</toolkit:Popup>
