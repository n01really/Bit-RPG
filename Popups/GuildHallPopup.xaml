<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Bit_RPG.GuildHallPopup"
               Size="450,650">
    <Border Stroke="Gray"
            StrokeThickness="2"
            Background="{AppThemeBinding Light=White, Dark=#1E1E1E}"
            Padding="20">
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto" RowSpacing="15">
            <Label Grid.Row="0"
                   x:Name="TitleLabel"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            
            <BoxView Grid.Row="1"
                     HeightRequest="1"
                     Color="Gray"/>

            <!-- Guild Master Section -->
            <VerticalStackLayout Grid.Row="2" x:Name="GuildMasterSection" Spacing="10">
                <Label Text="Guild Master"
                       FontSize="18"
                       FontAttributes="Bold"/>
                <Border Stroke="Gray"
                        StrokeThickness="1"
                        Padding="10"
                        BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">
                    <VerticalStackLayout Spacing="5">
                        <Label x:Name="GuildMasterName" FontSize="14" FontAttributes="Bold"/>
                        <Label x:Name="GuildMasterInfo" FontSize="12" TextColor="Gray"/>
                        <Button Text="Talk to Guild Master"
                                Clicked="OnTalkToGuildMasterClicked"
                                Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>

            <BoxView Grid.Row="3" HeightRequest="1" Color="LightGray"/>

            <!-- Scrollable Content -->
            <ScrollView Grid.Row="4">
                <VerticalStackLayout Spacing="15">
                    <!-- Guild Members Section -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Guild Members"
                               FontSize="18"
                               FontAttributes="Bold"/>
                        <VerticalStackLayout x:Name="GuildMembersContainer" Spacing="8"/>
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="LightGray"/>

                    <!-- Training Section -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Training"
                               FontSize="18"
                               FontAttributes="Bold"/>
                        <Label Text="Train your skills to improve your abilities and advance your rank."
                               FontSize="12"
                               TextColor="Gray"/>
                        <Button Text="View Training Options"
                                Clicked="OnTrainingClicked"
                                HorizontalOptions="Fill"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </ScrollView>
            
            <Button Grid.Row="5"
                    Text="Close"
                    Clicked="OnCloseClicked"
                    HorizontalOptions="Center"
                    Margin="0,10,0,0"/>
        </Grid>
    </Border>
</toolkit:Popup>
