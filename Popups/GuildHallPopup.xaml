<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Bit_RPG.GuildHallPopup">
    <Border Stroke="Gray"
            StrokeThickness="2"
            Background="{AppThemeBinding Light=White, Dark=#1E1E1E}"
            Padding="15"
            MaximumWidthRequest="500"
            MaximumHeightRequest="700"
            WidthRequest="380"
            HeightRequest="580"
            Margin="10">
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto" RowSpacing="12">
            <Label Grid.Row="0"
                   x:Name="TitleLabel"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            
            <BoxView Grid.Row="1"
                     HeightRequest="1"
                     Color="Gray"/>

            <!-- Guild Master Section -->
            <VerticalStackLayout Grid.Row="2" x:Name="GuildMasterSection" Spacing="8">
                <Label Text="Guild Master"
                       FontSize="16"
                       FontAttributes="Bold"/>
                <Border Stroke="Gray"
                        StrokeThickness="1"
                        Padding="8"
                        BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">
                    <VerticalStackLayout Spacing="4">
                        <Label x:Name="GuildMasterName" FontSize="13" FontAttributes="Bold"/>
                        <Label x:Name="GuildMasterInfo" FontSize="11" TextColor="Gray"/>
                        <Button Text="Talk to Guild Master"
                                Clicked="OnTalkToGuildMasterClicked"
                                Padding="15,6"
                                Margin="0,4,0,0"/>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>

            <BoxView Grid.Row="3" HeightRequest="1" Color="LightGray"/>

            <!-- Scrollable Content -->
            <ScrollView Grid.Row="4">
                <VerticalStackLayout Spacing="12">
                    <!-- Guild Members Section -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Guild Members"
                               FontSize="16"
                               FontAttributes="Bold"/>
                        <VerticalStackLayout x:Name="GuildMembersContainer" Spacing="6"/>
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="LightGray"/>

                    <!-- Training Section -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Training"
                               FontSize="16"
                               FontAttributes="Bold"/>
                        <Label Text="Train your skills to improve your abilities and advance your rank."
                               FontSize="11"
                               TextColor="Gray"/>
                        <Button Text="View Training Options"
                                Clicked="OnTrainingClicked"
                                Padding="15,8"
                                HorizontalOptions="Fill"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </ScrollView>
            
            <Button Grid.Row="5"
                    Text="Close"
                    Clicked="OnCloseClicked"
                    HorizontalOptions="Center"
                    Padding="20,8"
                    Margin="0,8,0,0"/>
        </Grid>
    </Border>
</toolkit:Popup>
