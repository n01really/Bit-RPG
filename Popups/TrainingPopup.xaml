<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Bit_RPG.TrainingPopup">
    <Border Stroke="Gray"
            StrokeThickness="2"
            Background="{AppThemeBinding Light=White, Dark=#1E1E1E}"
            Padding="15"
            MaximumWidthRequest="500"
            MaximumHeightRequest="700"
            WidthRequest="380"
            HeightRequest="550"
            Margin="10">
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto" RowSpacing="12">
            <Label Grid.Row="0"
                   Text="Skill Training"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            
            <BoxView Grid.Row="1"
                     HeightRequest="1"
                     Color="Gray"/>

            <Label Grid.Row="2"
                   x:Name="PlayerGoldLabel"
                   FontSize="13"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Label Grid.Row="3"
                   Text="Pay gold to train your guild skills"
                   FontSize="11"
                   TextColor="Gray"
                   HorizontalOptions="Center"/>

            <ScrollView Grid.Row="4">
                <VerticalStackLayout x:Name="SkillsContainer" Spacing="6"/>
            </ScrollView>
            
            <Button Grid.Row="5"
                    Text="Close"
                    Clicked="OnCloseClicked"
                    HorizontalOptions="Center"
                    Padding="20,8"
                    Margin="0,8,0,0"/>
        </Grid>
    </Border>
</toolkit:Popup>
