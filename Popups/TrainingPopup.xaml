<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Bit_RPG.TrainingPopup"
               Size="450,600">
    <Border Stroke="Gray"
            StrokeThickness="2"
            Background="{AppThemeBinding Light=White, Dark=#1E1E1E}"
            Padding="20">
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto" RowSpacing="15">
            <Label Grid.Row="0"
                   Text="Skill Training"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            
            <BoxView Grid.Row="1"
                     HeightRequest="1"
                     Color="Gray"/>

            <Label Grid.Row="2"
                   x:Name="SkillPointsLabel"
                   FontSize="14"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Label Grid.Row="3"
                   Text="Select a skill to train (costs 1 skill point)"
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Center"/>

            <ScrollView Grid.Row="4">
                <VerticalStackLayout x:Name="SkillsContainer" Spacing="8"/>
            </ScrollView>
            
            <Button Grid.Row="5"
                    Text="Close"
                    Clicked="OnCloseClicked"
                    HorizontalOptions="Center"
                    Margin="0,10,0,0"/>
        </Grid>
    </Border>
</toolkit:Popup>
