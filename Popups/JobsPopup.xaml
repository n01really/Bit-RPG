<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Bit_RPG.JobsPopup"
               Size="400,600">
    <Border Stroke="Gray"
            StrokeThickness="2"
            Background="{AppThemeBinding Light=White, Dark=#1E1E1E}"
            Padding="20">
        <VerticalStackLayout Spacing="15">
            <Label Text="Jobs"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            
            <BoxView HeightRequest="1"
                     Color="Gray"/>

            <!-- Current Job Info -->
            <VerticalStackLayout x:Name="CurrentJobInfo" Spacing="5">
                <Label Text="Current Job"
                       FontSize="16"
                       FontAttributes="Bold"/>
                <HorizontalStackLayout Spacing="10">
                    <Label Text="{Binding Jobb.Name}" FontSize="14"/>
                    <Label Text="-" FontSize="14"/>
                    <Label Text="{Binding Jobb.Rank, StringFormat='Rank: {0}'}" FontSize="14" FontAttributes="Bold"/>
                </HorizontalStackLayout>
                <Label x:Name="RankProgress" FontSize="12" TextColor="Gray"/>
                <BoxView HeightRequest="1" Color="Gray" Margin="0,5"/>
            </VerticalStackLayout>
            
            <ScrollView HeightRequest="400">
                <VerticalStackLayout Spacing="10">
                    <VerticalStackLayout x:Name="AdventurersGuildSection" Spacing="10">
                        <Label Text="Adventurer's Guild"
                               FontSize="18"
                               FontAttributes="Bold"/>
                        <Label Text="Take on quests and explore dangerous dungeons to earn rewards and fame."
                               FontSize="14"/>
                        <Button x:Name="AdventurersGuildButton"
                                Text="Select Job"
                                Clicked="OnAdventurersGuildClicked"
                                HorizontalOptions="End"
                                Margin="0,5,0,0"/>
                        
                        <BoxView HeightRequest="1" Color="LightGray" Margin="0,10"/>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout x:Name="BlacksmithsGuildSection" Spacing="10">
                        <Label Text="Blacksmith's Guild"
                               FontSize="18"
                               FontAttributes="Bold"/>
                        <Label Text="Craft and repair weapons and armor for adventurers and townsfolk."
                               FontSize="14"/>
                        <Button x:Name="BlacksmithsGuildButton"
                                Text="Select Job"
                                Clicked="OnBlacksmithsGuildClicked"
                                HorizontalOptions="End"
                                Margin="0,5,0,0"/>
                        
                        <BoxView HeightRequest="1" Color="LightGray" Margin="0,10"/>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout x:Name="MagesGuildSection" Spacing="10">
                        <Label Text="Mage's Guild"
                               FontSize="18"
                               FontAttributes="Bold"/>
                        <Label Text="Study and practice the arcane arts, offering magical services to those in need."
                               FontSize="14"/>
                        <Button x:Name="MagesGuildButton"
                                Text="Select Job"
                                Clicked="OnMagesGuildClicked"
                                HorizontalOptions="End"
                                Margin="0,5,0,0"/>
                        
                        <BoxView HeightRequest="1" Color="LightGray" Margin="0,10"/>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout x:Name="ThievesGuildSection" Spacing="10">
                        <Label Text="Thieves Guild"
                               FontSize="18"
                               FontAttributes="Bold"/>
                        <Label Text="Engage in stealthy activities, from pickpocketing to high-stakes heists."
                               FontSize="14"/>
                        <Button x:Name="ThievesGuildButton"
                                Text="Select Job"
                                Clicked="OnThievesGuildClicked"
                                HorizontalOptions="End"
                                Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </ScrollView>
            
            <Button Text="Close"
                    Clicked="OnCloseClicked"
                    HorizontalOptions="Center"
                    Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </Border>
</toolkit:Popup>
