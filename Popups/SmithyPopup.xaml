<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Bit_RPG.SmithyPopup">
    <Border Stroke="Gray"
            StrokeThickness="2"
            Background="{AppThemeBinding Light=White, Dark=#1E1E1E}"
            Padding="15"
            MaximumWidthRequest="500"
            MaximumHeightRequest="700"
            WidthRequest="380"
            HeightRequest="580"
            Margin="10">
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto" RowSpacing="12">
            <Label Grid.Row="0"
                   Text="Smithy"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            
            <BoxView Grid.Row="1"
                     HeightRequest="1"
                     Color="Gray"/>

            <Label Grid.Row="2"
                   x:Name="PlayerGoldLabel"
                   FontSize="13"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"/>

            <Label Grid.Row="3"
                   x:Name="SmithingSkillLabel"
                   FontSize="11"
                   HorizontalOptions="Center"
                   TextColor="Gray"/>

            <ScrollView Grid.Row="4">
                <VerticalStackLayout Spacing="12">
                    
                    <!-- Commission Section -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Commission Work"
                               FontSize="16"
                               FontAttributes="Bold"/>
                        <Label Text="Have the blacksmith craft equipment for you."
                               FontSize="11"
                               TextColor="Gray"/>
                        
                        <Border Stroke="Gray"
                                StrokeThickness="1"
                                Padding="8"
                                BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="Iron Sword" FontSize="13" FontAttributes="Bold"/>
                                <Label Text="A basic but sturdy sword." FontSize="10" TextColor="Gray"/>
                                <Label Text="Cost: 50 Gold" FontSize="10"/>
                                <Button Text="Commission"
                                        Clicked="OnCommissionIronSwordClicked"
                                        Padding="15,6"
                                        Margin="0,4,0,0"/>
                            </VerticalStackLayout>
                        </Border>

                        <Border Stroke="Gray"
                                StrokeThickness="1"
                                Padding="8"
                                BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="Iron Armor" FontSize="13" FontAttributes="Bold"/>
                                <Label Text="Basic protective armor." FontSize="10" TextColor="Gray"/>
                                <Label Text="Cost: 80 Gold" FontSize="10"/>
                                <Button Text="Commission"
                                        Clicked="OnCommissionIronArmorClicked"
                                        Padding="15,6"
                                        Margin="0,4,0,0"/>
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="LightGray"/>

                    <!-- Craft Section -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Craft Your Own"
                               FontSize="16"
                               FontAttributes="Bold"/>
                        <Label Text="Use your smithing skills to craft equipment yourself."
                               FontSize="11"
                               TextColor="Gray"/>
                        <Button Text="View Crafting Options"
                                Clicked="OnCraftingClicked"
                                Padding="15,8"
                                HorizontalOptions="Fill"/>
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="LightGray"/>

                    <!-- Train Smithing -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Smithing Training"
                               FontSize="16"
                               FontAttributes="Bold"/>
                        <Label Text="Improve your smithing skill through practice."
                               FontSize="11"
                               TextColor="Gray"/>
                        <Button Text="Train Smithing (1 Skill Point)"
                                Clicked="OnTrainSmithingClicked"
                                Padding="15,8"
                                HorizontalOptions="Fill"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </ScrollView>
            
            <Button Grid.Row="5"
                    Text="Close"
                    Clicked="OnCloseClicked"
                    HorizontalOptions="Center"
                    Padding="20,8"
                    Margin="0,8,0,0"/>
        </Grid>
    </Border>
</toolkit:Popup>
