<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Bit_RPG.SmithyPopup"
               Size="450,650">
    <Border Stroke="Gray"
            StrokeThickness="2"
            Background="{AppThemeBinding Light=White, Dark=#1E1E1E}"
            Padding="20">
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto" RowSpacing="15">
            <Label Grid.Row="0"
                   Text="Smithy"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            
            <BoxView Grid.Row="1"
                     HeightRequest="1"
                     Color="Gray"/>

            <Label Grid.Row="2"
                   x:Name="PlayerGoldLabel"
                   FontSize="14"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"/>

            <Label Grid.Row="3"
                   x:Name="SmithingSkillLabel"
                   FontSize="12"
                   HorizontalOptions="Center"
                   TextColor="Gray"/>

            <ScrollView Grid.Row="4">
                <VerticalStackLayout Spacing="15">
                    
                    <!-- Commission Section -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Commission Work"
                               FontSize="18"
                               FontAttributes="Bold"/>
                        <Label Text="Have the blacksmith craft equipment for you."
                               FontSize="12"
                               TextColor="Gray"/>
                        
                        <Border Stroke="Gray"
                                StrokeThickness="1"
                                Padding="10"
                                BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">
                            <VerticalStackLayout Spacing="8">
                                <Label Text="Iron Sword" FontSize="14" FontAttributes="Bold"/>
                                <Label Text="A basic but sturdy sword." FontSize="11" TextColor="Gray"/>
                                <Label Text="Cost: 50 Gold" FontSize="11"/>
                                <Button Text="Commission"
                                        Clicked="OnCommissionIronSwordClicked"
                                        Margin="0,5,0,0"/>
                            </VerticalStackLayout>
                        </Border>

                        <Border Stroke="Gray"
                                StrokeThickness="1"
                                Padding="10"
                                BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">
                            <VerticalStackLayout Spacing="8">
                                <Label Text="Iron Armor" FontSize="14" FontAttributes="Bold"/>
                                <Label Text="Basic protective armor." FontSize="11" TextColor="Gray"/>
                                <Label Text="Cost: 80 Gold" FontSize="11"/>
                                <Button Text="Commission"
                                        Clicked="OnCommissionIronArmorClicked"
                                        Margin="0,5,0,0"/>
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="LightGray"/>

                    <!-- Craft Section -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Craft Your Own"
                               FontSize="18"
                               FontAttributes="Bold"/>
                        <Label Text="Use your smithing skills to craft equipment yourself."
                               FontSize="12"
                               TextColor="Gray"/>
                        <Button Text="View Crafting Options"
                                Clicked="OnCraftingClicked"
                                HorizontalOptions="Fill"/>
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="LightGray"/>

                    <!-- Train Smithing -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Smithing Training"
                               FontSize="18"
                               FontAttributes="Bold"/>
                        <Label Text="Improve your smithing skill through practice."
                               FontSize="12"
                               TextColor="Gray"/>
                        <Button Text="Train Smithing (1 Skill Point)"
                                Clicked="OnTrainSmithingClicked"
                                HorizontalOptions="Fill"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </ScrollView>
            
            <Button Grid.Row="5"
                    Text="Close"
                    Clicked="OnCloseClicked"
                    HorizontalOptions="Center"
                    Margin="0,10,0,0"/>
        </Grid>
    </Border>
</toolkit:Popup>
