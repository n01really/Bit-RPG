<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Bit_RPG.LevelUpPopup"
               Size="450,500">
    <Border Stroke="Gray"
            StrokeThickness="2"
            Background="{AppThemeBinding Light=White, Dark=#1E1E1E}"
            Padding="20">
        <ScrollView>
            <VerticalStackLayout Spacing="15">
                <Label Text="Level Up!"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
                
                <BoxView HeightRequest="1"
                         Color="Gray"/>
                
                <!-- Attribute Points Display -->
                <Label Text="{Binding SkillPoints, StringFormat='Attribute Points: {0}'}"
                       FontSize="18"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"/>
                
                <Label Text="Allocate your attribute points to increase your stats"
                       FontSize="12"
                       TextColor="Gray"
                       HorizontalOptions="Center"/>
                
                <Grid ColumnDefinitions="Auto,*,Auto,Auto" 
                      RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                      RowSpacing="10" 
                      ColumnSpacing="8">
                    
                    <Label Grid.Row="0" Grid.Column="0" Text="Level:" FontAttributes="Bold"/>
                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Level}"/>
                    
                    <Label Grid.Row="1" Grid.Column="0" Text="Max Health:" FontAttributes="Bold"/>
                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding MaxHealth}"/>
                    <Border Grid.Row="1" Grid.Column="2" 
                            WidthRequest="25"
                            HeightRequest="25"
                            StrokeThickness="0"
                            BackgroundColor="DarkRed">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12.5"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDecreaseAttribute" CommandParameter="MaxHealth"/>
                        </Border.GestureRecognizers>
                        <Label Text="-" 
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="3" 
                            WidthRequest="25"
                            HeightRequest="25"
                            StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12.5"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnIncreaseAttribute" CommandParameter="MaxHealth"/>
                        </Border.GestureRecognizers>
                        <Label Text="+" 
                               TextColor="White"
                               FontSize="16"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    
                    <Label Grid.Row="2" Grid.Column="0" Text="Max Mana:" FontAttributes="Bold"/>
                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding MaxMana}"/>
                    <Border Grid.Row="2" Grid.Column="2" 
                            WidthRequest="25"
                            HeightRequest="25"
                            StrokeThickness="0"
                            BackgroundColor="DarkRed">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12.5"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDecreaseAttribute" CommandParameter="MaxMana"/>
                        </Border.GestureRecognizers>
                        <Label Text="-" 
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Border Grid.Row="2" Grid.Column="3" 
                            WidthRequest="25"
                            HeightRequest="25"
                            StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12.5"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnIncreaseAttribute" CommandParameter="MaxMana"/>
                        </Border.GestureRecognizers>
                        <Label Text="+" 
                               TextColor="White"
                               FontSize="16"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    
                    <Label Grid.Row="3" Grid.Column="0" Text="Strength:" FontAttributes="Bold"/>
                    <Label Grid.Row="3" Grid.Column="1" Text="{Binding Strength}"/>
                    <Border Grid.Row="3" Grid.Column="2" 
                            WidthRequest="25"
                            HeightRequest="25"
                            StrokeThickness="0"
                            BackgroundColor="DarkRed">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12.5"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDecreaseAttribute" CommandParameter="Strength"/>
                        </Border.GestureRecognizers>
                        <Label Text="-" 
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Border Grid.Row="3" Grid.Column="3" 
                            WidthRequest="25"
                            HeightRequest="25"
                            StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12.5"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnIncreaseAttribute" CommandParameter="Strength"/>
                        </Border.GestureRecognizers>
                        <Label Text="+" 
                               TextColor="White"
                               FontSize="16"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    
                    <Label Grid.Row="4" Grid.Column="0" Text="Agility:" FontAttributes="Bold"/>
                    <Label Grid.Row="4" Grid.Column="1" Text="{Binding Agility}"/>
                    <Border Grid.Row="4" Grid.Column="2" 
                            WidthRequest="25"
                            HeightRequest="25"
                            StrokeThickness="0"
                            BackgroundColor="DarkRed">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12.5"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDecreaseAttribute" CommandParameter="Agility"/>
                        </Border.GestureRecognizers>
                        <Label Text="-" 
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Border Grid.Row="4" Grid.Column="3" 
                            WidthRequest="25"
                            HeightRequest="25"
                            StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12.5"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnIncreaseAttribute" CommandParameter="Agility"/>
                        </Border.GestureRecognizers>
                        <Label Text="+" 
                               TextColor="White"
                               FontSize="16"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    
                    <Label Grid.Row="5" Grid.Column="0" Text="Intelligence:" FontAttributes="Bold"/>
                    <Label Grid.Row="5" Grid.Column="1" Text="{Binding Intelligence}"/>
                    <Border Grid.Row="5" Grid.Column="2" 
                            WidthRequest="25"
                            HeightRequest="25"
                            StrokeThickness="0"
                            BackgroundColor="DarkRed">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12.5"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDecreaseAttribute" CommandParameter="Intelligence"/>
                        </Border.GestureRecognizers>
                        <Label Text="-" 
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Border Grid.Row="5" Grid.Column="3" 
                            WidthRequest="25"
                            HeightRequest="25"
                            StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12.5"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnIncreaseAttribute" CommandParameter="Intelligence"/>
                        </Border.GestureRecognizers>
                        <Label Text="+" 
                               TextColor="White"
                               FontSize="16"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>

                    <BoxView Grid.Row="6" Grid.ColumnSpan="4" HeightRequest="1" Color="LightGray" Margin="0,10"/>
                    
                    <Label Grid.Row="7" Grid.Column="0" Text="Attack:" FontAttributes="Bold"/>
                    <Label Grid.Row="7" Grid.Column="1" Text="{Binding Attack}"/>
                    
                    <Label Grid.Row="8" Grid.Column="0" Text="Defense:" FontAttributes="Bold"/>
                    <Label Grid.Row="8" Grid.Column="1" Text="{Binding Defense}"/>
                </Grid>

                <Label Text="Skills can only be increased through quests and training"
                       FontSize="11"
                       TextColor="Gray"
                       HorizontalOptions="Center"
                       Margin="0,10,0,0"/>
                
                <Button Text="Finish"
                        Clicked="OnFinishClicked"
                        HorizontalOptions="Center"
                        Margin="0,10,0,0"/>
            </VerticalStackLayout>
        </ScrollView>
    </Border>
</toolkit:Popup>
