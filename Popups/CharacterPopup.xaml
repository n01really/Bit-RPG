<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Bit_RPG.CharacterPopup"
               Size="400,600">
    <Border Stroke="Gray"
            StrokeThickness="2"
            Background="{AppThemeBinding Light=White, Dark=#1E1E1E}"
            Padding="20">
        <VerticalStackLayout Spacing="15">
            <Label Text="Character"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            
            <BoxView HeightRequest="1"
                     Color="Gray"/>
            
            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="10" ColumnSpacing="15">
                <Label Grid.Row="0" Grid.Column="0" Text="Name:" FontAttributes="Bold"/>
                <Label Grid.Row="0" Grid.Column="1" Text="{Binding PlayerName}"/>
                
                <Label Grid.Row="1" Grid.Column="0" Text="Age:" FontAttributes="Bold"/>
                <Label Grid.Row="1" Grid.Column="1" Text="{Binding Age}"/>
                
                <Label Grid.Row="2" Grid.Column="0" Text="Race:" FontAttributes="Bold"/>
                <Label Grid.Row="2" Grid.Column="1" Text="{Binding Race}"/>
                
                <Label Grid.Row="3" Grid.Column="0" Text="Class:" FontAttributes="Bold"/>
                <Label Grid.Row="3" Grid.Column="1" Text="{Binding Class}"/>
                
                <Label Grid.Row="4" Grid.Column="0" Text="Money:" FontAttributes="Bold"/>
                <Label Grid.Row="4" Grid.Column="1" Text="{Binding Money}"/>
                
                <Label Grid.Row="5" Grid.Column="0" Text="Health:" FontAttributes="Bold"/>
                <Label Grid.Row="5" Grid.Column="1" Text="{Binding Health}"/>
                
                <Label Grid.Row="6" Grid.Column="0" Text="Stamina:" FontAttributes="Bold"/>
                <Label Grid.Row="6" Grid.Column="1" Text="{Binding Stamina}"/>
                
                <Label Grid.Row="7" Grid.Column="0" Text="Mana:" FontAttributes="Bold"/>
                <Label Grid.Row="7" Grid.Column="1" Text="{Binding Mana}"/>
                
                <Label Grid.Row="8" Grid.Column="0" Text="Strength:" FontAttributes="Bold"/>
                <Label Grid.Row="8" Grid.Column="1" Text="{Binding Strength}"/>
                
                <Label Grid.Row="9" Grid.Column="0" Text="Defense:" FontAttributes="Bold"/>
                <Label Grid.Row="9" Grid.Column="1" Text="{Binding Defense}"/>
            </Grid>
            
            <Button Text="Close"
                    Clicked="OnCloseClicked"
                    HorizontalOptions="Center"
                    Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </Border>
</toolkit:Popup>
