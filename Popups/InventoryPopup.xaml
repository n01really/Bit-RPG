<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Bit_RPG.InventoryPopup"
               Size="600,700">
    <Border Stroke="Gray"
            StrokeThickness="2"
            Background="{AppThemeBinding Light=White, Dark=#1E1E1E}"
            Padding="0"
            Margin="10">
        <Border.WidthRequest>
            <OnPlatform x:TypeArguments="x:Double">
                <On Platform="Android" Value="360" />
                <On Platform="iOS" Value="360" />
                <On Platform="WinUI" Value="450" />
            </OnPlatform>
        </Border.WidthRequest>
        <Border.HeightRequest>
            <OnPlatform x:TypeArguments="x:Double">
                <On Platform="Android" Value="620" />
                <On Platform="iOS" Value="620" />
                <On Platform="WinUI" Value="680" />
            </OnPlatform>
        </Border.HeightRequest>
        
        <Grid RowDefinitions="Auto,*,Auto" RowSpacing="0">
            
            <!-- Header -->
            <Grid Grid.Row="0" 
                  Padding="20,16"
                  BackgroundColor="{StaticResource Primary}">
                <Label Text="ðŸŽ’ Inventory"
                       TextColor="White"
                       FontSize="22"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Grid>
            
            <!-- Content -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout Spacing="0" Padding="16">
                    
                    <!-- Stats Display -->
                    <Border Stroke="{StaticResource Primary}"
                            StrokeThickness="2"
                            Padding="16"
                            Margin="0,0,0,16"
                            BackgroundColor="{AppThemeBinding Light=#F0F8FF, Dark=#1A2A3A}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="*,*" RowSpacing="8">
                            <VerticalStackLayout Grid.Column="0" Spacing="4">
                                <Label Text="Attack" FontSize="12" TextColor="Gray"/>
                                <Label Text="{Binding Attack, StringFormat='âš”ï¸ {0}'}" 
                                       FontSize="18" 
                                       FontAttributes="Bold"
                                       TextColor="Red"/>
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                <Label Text="Defense" FontSize="12" TextColor="Gray"/>
                                <Label Text="{Binding Defense, StringFormat='ðŸ›¡ï¸ {0}'}" 
                                       FontSize="18" 
                                       FontAttributes="Bold"
                                       TextColor="Blue"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>

                    <!-- Equipped Items -->
                    <Label Text="Equipped"
                           FontSize="16"
                           FontAttributes="Bold"
                           Margin="0,0,0,12"/>
                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,0,0,16">
                        <Border Grid.Column="0" 
                                Stroke="LightGray" 
                                StrokeThickness="1" 
                                Padding="12"
                                BackgroundColor="{AppThemeBinding Light=#F9F9F9, Dark=#2A2A2A}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <VerticalStackLayout Spacing="6">
                                <Label Text="âš”ï¸ Weapon" FontSize="13" FontAttributes="Bold"/>
                                <Label x:Name="EquippedWeaponLabel" 
                                       Text="None" 
                                       FontSize="12" 
                                       TextColor="Gray"
                                       LineBreakMode="WordWrap"/>
                            </VerticalStackLayout>
                        </Border>
                        <Border Grid.Column="1" 
                                Stroke="LightGray" 
                                StrokeThickness="1" 
                                Padding="12"
                                BackgroundColor="{AppThemeBinding Light=#F9F9F9, Dark=#2A2A2A}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <VerticalStackLayout Spacing="6">
                                <Label Text="ðŸ›¡ï¸ Armor" FontSize="13" FontAttributes="Bold"/>
                                <Label x:Name="EquippedArmorLabel" 
                                       Text="None" 
                                       FontSize="12" 
                                       TextColor="Gray"
                                       LineBreakMode="WordWrap"/>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>
                    
                    <!-- All Items -->
                    <Label Text="All Items"
                           FontSize="16"
                           FontAttributes="Bold"
                           Margin="0,8,0,12"/>
                    
                    <CollectionView x:Name="InventoryCollection"
                                  SelectionMode="None">
                        <CollectionView.EmptyView>
                            <Border Stroke="LightGray"
                                    StrokeThickness="1"
                                    Padding="32"
                                    Margin="0,20,0,20"
                                    BackgroundColor="{AppThemeBinding Light=#F9F9F9, Dark=#2A2A2A}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                                    <Label Text="ðŸ“¦"
                                           FontSize="32"
                                           HorizontalOptions="Center"/>
                                    <Label Text="No items in inventory yet."
                                           FontSize="14"
                                           HorizontalOptions="Center"
                                           TextColor="Gray"/>
                                </VerticalStackLayout>
                            </Border>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Stroke="LightGray"
                                      StrokeThickness="1"
                                      Padding="16"
                                      Margin="0,0,0,12"
                                      BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <VerticalStackLayout Spacing="8">
                                        <Label Text="{Binding Name}"
                                             FontSize="15"
                                             FontAttributes="Bold"/>
                                        <Label Text="{Binding ItemDetails}"
                                             FontSize="13"
                                             TextColor="Gray"
                                             LineBreakMode="WordWrap"/>
                                        <HorizontalStackLayout Spacing="12">
                                            <Button Text="{Binding ActionButtonText}"
                                                  Clicked="OnItemActionClicked"
                                                  CommandParameter="{Binding .}"
                                                  BackgroundColor="{Binding ActionButtonColor}"
                                                  TextColor="White"
                                                  HeightRequest="44"
                                                  FontSize="14"
                                                  CornerRadius="8"
                                                  HorizontalOptions="Start"
                                                  IsVisible="{Binding ShowActionButton}"/>
                                            <Label Text="{Binding StatusText}"
                                                 FontSize="13"
                                                 FontAttributes="Bold"
                                                 TextColor="Green"
                                                 VerticalOptions="Center"
                                                 IsVisible="{Binding ShowStatus}"/>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    
                </VerticalStackLayout>
            </ScrollView>
            
            <!-- Footer Button -->
            <Border Grid.Row="2"
                    BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2C2C2C}"
                    Padding="16">
                <Button Text="Close"
                        Clicked="OnCloseClicked"
                        HorizontalOptions="Fill"
                        HeightRequest="48"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="8"/>
            </Border>
        </Grid>
    </Border>
</toolkit:Popup>
