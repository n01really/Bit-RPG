<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Bit_RPG.InventoryPopup">
    <Border Stroke="Gray"
            StrokeThickness="2"
            Background="{AppThemeBinding Light=White, Dark=#1E1E1E}"
            Padding="15"
            MaximumWidthRequest="600"
            MaximumHeightRequest="700"
            WidthRequest="380"
            HeightRequest="580"
            Margin="10">
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto" RowSpacing="12">
            <Label Grid.Row="0"
                   Text="Inventory"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <HorizontalStackLayout Grid.Row="1" 
                                   HorizontalOptions="Center"
                                   Spacing="15">
                <Label Text="Attack:" FontSize="12"/>
                <Label Text="{Binding Attack}" FontSize="12" TextColor="Red"/>
                <Label Text="Defense:" FontSize="12" Margin="15,0,0,0"/>
                <Label Text="{Binding Defense}" FontSize="12" TextColor="Blue"/>
            </HorizontalStackLayout>

            <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="8">
                <Border Grid.Column="0" Stroke="Gray" StrokeThickness="1" Padding="8">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Equipped Weapon:" FontSize="11" FontAttributes="Bold"/>
                        <Label x:Name="EquippedWeaponLabel" Text="None" FontSize="10" TextColor="Gray"/>
                    </VerticalStackLayout>
                </Border>
                <Border Grid.Column="1" Stroke="Gray" StrokeThickness="1" Padding="8">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Equipped Armor:" FontSize="11" FontAttributes="Bold"/>
                        <Label x:Name="EquippedArmorLabel" Text="None" FontSize="10" TextColor="Gray"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <BoxView Grid.Row="3"
                     HeightRequest="1"
                     Color="Gray"/>
            
            <ScrollView Grid.Row="4">
                <CollectionView x:Name="InventoryCollection"
                              SelectionMode="None">
                    <CollectionView.EmptyView>
                        <Label Text="No items in inventory yet."
                               FontSize="12"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Margin="0,40,0,0"/>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="Gray"
                                  StrokeThickness="1"
                                  Padding="8"
                                  Margin="0,4">
                                <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="4">
                                    <Label Grid.Row="0"
                                         Text="{Binding Name}"
                                         FontSize="14"
                                         FontAttributes="Bold"/>
                                    <Label Grid.Row="1"
                                         Text="{Binding ItemDetails}"
                                         FontSize="11"
                                         TextColor="Gray"/>
                                    <HorizontalStackLayout Grid.Row="2" Spacing="8">
                                        <Button Text="{Binding ActionButtonText}"
                                              Clicked="OnItemActionClicked"
                                              CommandParameter="{Binding .}"
                                              BackgroundColor="{Binding ActionButtonColor}"
                                              TextColor="White"
                                              Padding="12,5"
                                              FontSize="11"
                                              IsVisible="{Binding ShowActionButton}"/>
                                        <Label Text="{Binding StatusText}"
                                             FontSize="11"
                                             TextColor="Green"
                                             VerticalOptions="Center"
                                             IsVisible="{Binding ShowStatus}"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
            
            <Button Grid.Row="5"
                    Text="Close"
                    Clicked="OnCloseClicked"
                    HorizontalOptions="Center"
                    Padding="20,8"
                    Margin="0,8,0,0"/>
        </Grid>
    </Border>
</toolkit:Popup>
