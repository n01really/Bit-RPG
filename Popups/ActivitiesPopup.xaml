<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Bit_RPG.ActivitiesPopup"
               Size="600,700">
    <Border Stroke="Gray"
            StrokeThickness="2"
            Background="{AppThemeBinding Light=White, Dark=#1E1E1E}"
            Padding="0"
            Margin="10">
        <Border.WidthRequest>
            <OnPlatform x:TypeArguments="x:Double">
                <On Platform="Android" Value="360" />
                <On Platform="iOS" Value="360" />
                <On Platform="WinUI" Value="420" />
            </OnPlatform>
        </Border.WidthRequest>
        <Border.HeightRequest>
            <OnPlatform x:TypeArguments="x:Double">
                <On Platform="Android" Value="620" />
                <On Platform="iOS" Value="620" />
                <On Platform="WinUI" Value="650" />
            </OnPlatform>
        </Border.HeightRequest>
        
        <Grid RowDefinitions="Auto,*,Auto" RowSpacing="0">
            
            <!-- Header -->
            <Grid Grid.Row="0" 
                  Padding="20,16"
                  BackgroundColor="{StaticResource Primary}">
                <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                    <Label Text="ðŸŽ¯ Activities"
                           TextColor="White"
                           FontSize="22"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <Label x:Name="LocationLabel"
                           Text=""
                           FontSize="13"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Grid>

            <!-- Content -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout Spacing="0" Padding="16">
                    
                    <Label Text="What would you like to do?"
                           FontSize="14"
                           TextColor="Gray"
                           Margin="0,0,0,16"/>
                    
                    <!-- Market Section -->
                    <Border x:Name="MarketSection" 
                            Stroke="LightGray"
                            StrokeThickness="1"
                            Padding="16"
                            Margin="0,0,0,12"
                            BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="ðŸª Market"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <Label Text="Browse and trade goods with merchants from all over the land."
                                   FontSize="13"
                                   TextColor="Gray"
                                   LineBreakMode="WordWrap"/>
                            <Button x:Name="MarketButton"
                                    Text="Visit Market"
                                    Clicked="OnMarketClicked"
                                    HeightRequest="44"
                                    FontSize="14"
                                    CornerRadius="8"
                                    Margin="0,8,0,0"/>
                        </VerticalStackLayout>
                    </Border>
                    
                    <!-- Guild Hall Section -->
                    <Border x:Name="GuildHallSection" 
                            Stroke="LightGray"
                            StrokeThickness="1"
                            Padding="16"
                            Margin="0,0,0,12"
                            BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="ðŸ›ï¸ Guild Hall"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <Label Text="Meet with guildmates and the guild master, or train your skills."
                                   FontSize="13"
                                   TextColor="Gray"
                                   LineBreakMode="WordWrap"/>
                            <Button x:Name="GuildHallButton"
                                    Text="Visit Guild Hall"
                                    Clicked="OnGuildHallClicked"
                                    HeightRequest="44"
                                    FontSize="14"
                                    CornerRadius="8"
                                    Margin="0,8,0,0"/>
                        </VerticalStackLayout>
                    </Border>
                    
                    <!-- Crafters Section -->
                    <Border x:Name="CraftersSection" 
                            Stroke="LightGray"
                            StrokeThickness="1"
                            Padding="16"
                            Margin="0,0,0,12"
                            BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="ðŸ”¨ Crafters Guild"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <Label Text="Commission armor and weapons, craft your own, or train crafting skills."
                                   FontSize="13"
                                   TextColor="Gray"
                                   LineBreakMode="WordWrap"/>
                            <Button x:Name="CraftersButton"
                                    Text="Visit Crafters"
                                    Clicked="OnCraftersClicked"
                                    HeightRequest="44"
                                    FontSize="14"
                                    CornerRadius="8"
                                    Margin="0,8,0,0"/>
                        </VerticalStackLayout>
                    </Border>
                    
                    <!-- Apothecary Section -->
                    <Border x:Name="ApothecarySection" 
                            Stroke="LightGray"
                            StrokeThickness="1"
                            Padding="16"
                            Margin="0,0,0,12"
                            BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="âš—ï¸ Apothecary"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <Label Text="Brew potions and elixirs using alchemy and gathered ingredients."
                                   FontSize="13"
                                   TextColor="Gray"
                                   LineBreakMode="WordWrap"/>
                            <Button x:Name="ApothecaryButton"
                                    Text="Visit Apothecary"
                                    Clicked="OnApothecaryClicked"
                                    HeightRequest="44"
                                    FontSize="14"
                                    CornerRadius="8"
                                    Margin="0,8,0,0"/>
                        </VerticalStackLayout>
                    </Border>
                    
                    <!-- Travel Section -->
                    <Border x:Name="TravelSection" 
                            Stroke="LightGray"
                            StrokeThickness="1"
                            Padding="16"
                            Margin="0,0,0,12"
                            BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="ðŸ—ºï¸ Travel"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <Label Text="Journey to distant lands and explore new territories."
                                   FontSize="13"
                                   TextColor="Gray"
                                   LineBreakMode="WordWrap"/>
                            <Button x:Name="TravelButton"
                                    Text="Travel"
                                    Clicked="OnTravelClicked"
                                    HeightRequest="44"
                                    FontSize="14"
                                    CornerRadius="8"
                                    Margin="0,8,0,0"/>
                        </VerticalStackLayout>
                    </Border>
                    
                </VerticalStackLayout>
            </ScrollView>
            
            <!-- Footer Button -->
            <Border Grid.Row="2"
                    BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2C2C2C}"
                    Padding="16">
                <Button Text="Close"
                        Clicked="OnCloseClicked"
                        HorizontalOptions="Fill"
                        HeightRequest="48"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="8"/>
            </Border>
        </Grid>
    </Border>
</toolkit:Popup>
