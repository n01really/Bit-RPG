<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Bit_RPG.QuestsPopup"
               Size="400,600">
    <Border Stroke="Gray"
            StrokeThickness="2"
            Background="{AppThemeBinding Light=White, Dark=#1E1E1E}"
            Padding="20">
        <VerticalStackLayout Spacing="15">
            <Label Text="Quests"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            
            <BoxView HeightRequest="1"
                     Color="Gray"/>
            
            <ScrollView HeightRequest="450">
                <VerticalStackLayout Spacing="10">
                    <CollectionView ItemsSource="{Binding PlayerQuests}">
                        <CollectionView.EmptyView>
                            <Label Text="No active quests."
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Margin="0,50,0,0"/>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Stroke="Gray"
                                        StrokeThickness="1"
                                        Padding="10"
                                        Margin="0,5">
                                    <VerticalStackLayout Spacing="5">
                                        <HorizontalStackLayout Spacing="10">
                                            <Label Text="{Binding Name}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding RequiredRank, StringFormat='[Rank {0}]'}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="Orange"
                                                   VerticalOptions="Center"/>
                                        </HorizontalStackLayout>
                                        <Label Text="{Binding Description}"
                                               FontSize="14"/>
                                        <Label Text="{Binding Reward, StringFormat='Reward: {0}'}"
                                               FontSize="12"
                                               TextColor="Green"/>
                                        <Button Text="Accept Quest"
                                                Clicked="OnAcceptQuestClicked"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="Green"
                                                TextColor="White"
                                                Margin="0,5,0,0"/>
                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>
            
            <Button Text="Close"
                    Clicked="OnCloseClicked"
                    HorizontalOptions="Center"
                    Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </Border>
</toolkit:Popup>
