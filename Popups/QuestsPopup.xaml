<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Bit_RPG.QuestsPopup"
               Size="450,700">
    <Border Stroke="Gray"
            StrokeThickness="2"
            Background="{AppThemeBinding Light=White, Dark=#1E1E1E}"
            Padding="20">
        <VerticalStackLayout Spacing="15">
            <Label Text="Quests"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            
            <BoxView HeightRequest="1"
                     Color="Gray"/>
            
            <ScrollView HeightRequest="550">
                <VerticalStackLayout Spacing="20">
                    
                    <!-- Available Quests Section -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Available Quests"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=DarkBlue, Dark=LightBlue}"/>
                        
                        <CollectionView ItemsSource="{Binding AvailableQuests}">
                            <CollectionView.EmptyView>
                                <Label Text="No available quests."
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Margin="0,10,0,0"
                                       TextColor="Gray"
                                       FontSize="14"/>
                            </CollectionView.EmptyView>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Stroke="Gray"
                                            StrokeThickness="1"
                                            Padding="10"
                                            Margin="0,5">
                                        <VerticalStackLayout Spacing="5">
                                            <HorizontalStackLayout Spacing="10">
                                                <Label Text="{Binding Name}"
                                                       FontSize="18"
                                                       FontAttributes="Bold"/>
                                                <Label Text="{Binding RequiredRank, StringFormat='[Rank {0}]'}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="Orange"
                                                       VerticalOptions="Center"/>
                                            </HorizontalStackLayout>
                                            <Label Text="{Binding Description}"
                                                   FontSize="14"/>
                                            <Label Text="{Binding Reward, StringFormat='Reward: {0}'}"
                                                   FontSize="12"
                                                   TextColor="{AppThemeBinding Light=Green, Dark=LightGreen}"/>
                                            <Button Text="Accept Quest"
                                                    Clicked="OnAcceptQuestClicked"
                                                    CommandParameter="{Binding .}"
                                                    BackgroundColor="{AppThemeBinding Light=Green, Dark=DarkGreen}"
                                                    TextColor="White"
                                                    Margin="0,5,0,0"/>
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <BoxView HeightRequest="2"
                             Color="Gray"
                             Margin="0,10"/>

                    <!-- Accepted Quests Section -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Accepted Quests"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=Green, Dark=LightGreen}"/>
                        
                        <CollectionView ItemsSource="{Binding AcceptedQuests}">
                            <CollectionView.EmptyView>
                                <Label Text="No accepted quests."
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Margin="0,10,0,0"
                                       TextColor="Gray"
                                       FontSize="14"/>
                            </CollectionView.EmptyView>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Stroke="{AppThemeBinding Light=Green, Dark=LightGreen}"
                                            StrokeThickness="2"
                                            Padding="10"
                                            Margin="0,5"
                                            Background="{AppThemeBinding Light=#F0FFF0, Dark=#1A3A1A}">
                                        <VerticalStackLayout Spacing="5">
                                            <HorizontalStackLayout Spacing="10">
                                                <Label Text="{Binding Name}"
                                                       FontSize="18"
                                                       FontAttributes="Bold"/>
                                                <Label Text="{Binding RequiredRank, StringFormat='[Rank {0}]'}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="Orange"
                                                       VerticalOptions="Center"/>
                                            </HorizontalStackLayout>
                                            <Label Text="{Binding Description}"
                                                   FontSize="14"/>
                                            <Label Text="{Binding Reward, StringFormat='Reward: {0}'}"
                                                   FontSize="12"
                                                   TextColor="{AppThemeBinding Light=Green, Dark=LightGreen}"/>
                                            <Button Text="Cancel Quest"
                                                    Clicked="OnCancelQuestClicked"
                                                    CommandParameter="{Binding .}"
                                                    BackgroundColor="{AppThemeBinding Light=DarkRed, Dark=#8B0000}"
                                                    TextColor="White"
                                                    Margin="0,5,0,0"/>
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                    
                </VerticalStackLayout>
            </ScrollView>
            
            <Button Text="Close"
                    Clicked="OnCloseClicked"
                    HorizontalOptions="Center"
                    Margin="0,10,0,0"/>
        </VerticalStackLayout>
    </Border>
</toolkit:Popup>
