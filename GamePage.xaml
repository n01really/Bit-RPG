<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bit_RPG.GamePage"
             Title="GamePage">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        
        <!-- Player Information and Week Panel -->
        <Border
                Stroke="Gray"
                StrokeThickness="2"
                Padding="15"
                Margin="0,10,0,0">
            <Grid ColumnDefinitions="*,*,*,*,*,*" RowDefinitions="Auto">
                <Label
                        Grid.Column="0"
                        Text="{Binding Player.PlayerName, StringFormat='Name: {0}'}"
                        FontSize="16"
                        FontAttributes="Bold"/>
                <Label
                        Grid.Column="1"
                        Text="{Binding Player.Age, StringFormat='Age: {0}'}"
                        FontSize="16"/>
                <Label
                        Grid.Column="2"
                        Text="{Binding Player.Race, StringFormat='Race: {0}'}"
                        FontSize="16"/>
                <Label
                        Grid.Column="3"
                        Text="{Binding Player.Class, StringFormat='Class: {0}'}"
                        FontSize="16"/>
                <Label
                        Grid.Column="4"
                        Text="{Binding Player.Money, StringFormat='Money: {0}'}"
                        FontSize="16"/>
                <Label
                        Grid.Column="5"
                        Text="{Binding Week, StringFormat='Week: {0}'}"
                        FontSize="16"
                        HorizontalOptions="End"/>
            </Grid>
        </Border>

        <Border
                Stroke="Gray"
                StrokeThickness="1"
                HeightRequest="700"
                Padding="10">
            <ScrollView>
                <Label
                        Text="{Binding EventLog}"
                        HorizontalOptions="Center"
                        FontSize="18"/>
            </ScrollView>
        </Border>

        <Button
                x:Name="ForwardGameBTN"
                Text="Continue" 
                SemanticProperties.Hint="move the week forward by one"
                Clicked="OnForwardGameClicked"
                HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>