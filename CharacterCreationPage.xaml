<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bit_RPG.CharacterCreationPage"
             Title="Create Your Character">
    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="15">
            
            <Label 
                Text="Create Your Character"
                FontSize="20"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,10,0,15"/>

            <!-- Name Input -->
            <Label Text="Character Name:" FontSize="14" FontAttributes="Bold"/>
            <Entry x:Name="NameEntry" 
                   Placeholder="Enter your name"
                   FontSize="14"
                   MaxLength="20"/>

            <!-- Gender Selection -->
            <Label Text="Gender:" FontSize="14" FontAttributes="Bold" Margin="0,8,0,0"/>
            <HorizontalStackLayout Spacing="15">
                <RadioButton x:Name="MaleRadio" 
                             Content="Male" 
                             FontSize="13"
                             IsChecked="True"
                             GroupName="Gender"/>
                <RadioButton x:Name="FemaleRadio" 
                             Content="Female"
                             FontSize="13"
                             GroupName="Gender"/>
            </HorizontalStackLayout>

            <!-- Race Selection -->
            <Label Text="Race:" FontSize="14" FontAttributes="Bold" Margin="0,8,0,0"/>
            <Picker x:Name="RacePicker" 
                    Title="Select a race"
                    FontSize="14">
                <Picker.Items>
                    <x:String>Human</x:String>
                    <x:String>Elf</x:String>
                    <x:String>Dwarf</x:String>
                </Picker.Items>
            </Picker>

            <!-- Race Description -->
            <Border 
                Stroke="Gray"
                StrokeThickness="1"
                Padding="10"
                Margin="0,8,0,0">
                <Label x:Name="RaceDescription"
                       FontSize="12"
                       LineBreakMode="WordWrap"
                       TextColor="Gray"/>
            </Border>

            <!-- Class Selection -->
            <Label Text="Class:" FontSize="14" FontAttributes="Bold" Margin="0,8,0,0"/>
            <Picker x:Name="ClassPicker" 
                    Title="Select a class"
                    FontSize="14">
                <Picker.Items>
                    <x:String>Warrior</x:String>
                    <x:String>Mage</x:String>
                    <x:String>Rogue</x:String>
                </Picker.Items>
            </Picker>

            <!-- Class Description -->
            <Border 
                Stroke="Gray"
                StrokeThickness="1"
                Padding="10"
                Margin="0,8,0,0">
                <Label x:Name="ClassDescription"
                       FontSize="12"
                       LineBreakMode="WordWrap"
                       TextColor="Gray"/>
            </Border>

            <!-- Start Button -->
            <Button 
                x:Name="StartBtn"
                Text="Start Adventure"
                Clicked="OnStartAdventureClicked"
                Margin="0,15,0,10"
                Padding="0,12"
                FontSize="16"
                HorizontalOptions="Fill"
                BackgroundColor="{StaticResource Primary}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>